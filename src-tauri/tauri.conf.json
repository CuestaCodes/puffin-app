{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Puffin",
  "version": "0.1.0",
  "identifier": "com.cuestacodes.puffin",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build:static"
  },
  "app": {
    "windows": [
      {
        "title": "Puffin — Personal Budgeting",
        "label": "main",
        "width": 1280,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; connect-src 'self' https://api.github.com https://accounts.google.com https://*.googleapis.com"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis", "msi"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "publisher": "CuestaCodes",
    "copyright": "Copyright © 2025 CuestaCodes",
    "category": "Finance",
    "shortDescription": "Personal budgeting application",
    "longDescription": "Puffin is a locally-hosted personal budgeting application for tracking expenses, categorizing transactions, and monitoring spending against budgets.",
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.15"
    },
    "windows": {
      "webviewInstallMode": {
        "type": "embedBootstrapper",
        "silent": true
      }
    }
  },
  "plugins": {}
}
